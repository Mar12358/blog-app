<div class = "form-container">
<h2 class ="mt-5">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: "border-black border-solid border-2 mt-4" %>
  </div>

  <div class="field ">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "border-black border-solid border-2 mt-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "mt-4 w-full border-black border-solid border-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>