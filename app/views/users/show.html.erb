<h1>User Show</h1>
<%= render "shared/user_box", user: @user %>
<div class = "bio-box-container">
  <div class = "bio-box">
    <p>Bio</p>
    <br>
    <p><%=@user.bio%></p>
  </div>
</div>
<% @posts.limit(3).each do |post| %>
  <a class="bio-box-container" href="<%= user_post_path(@user, post) %>">
    <%= render "shared/post_box", post: post %>
  </a>
<% end %>
<a class="btn-container" href="<%= user_posts_path(@user) %>">
  <button class="see-all-posts text-center p-1 border-solid border-black border-2">See all posts</button>
</a>
<a class="btn-container" href="<%= new_user_post_path(current_user) %>">
    <button class='text-center p-1 border-solid border-black border-2'>Create a new post</button>
</a>
<a class="btn-container" href="<%= users_path %>">
