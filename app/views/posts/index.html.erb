<h1>Posts Index</h1>
<%= render "shared/user_box", user: @user %>
<% @posts.each do |post| %>
  <a class = "post-box" href="<%= user_post_path(@user, post) %>">
    <div class = "bio-box-container">
      <%= render "shared/post_box", post: post, user: @user%>
    </div>
      <%= render "shared/comment_box", post: post, limit: 5 %>
  </div>
<% end %>
<a class = "btn-container" href="#">
    <button class='pagination-btn text-center p-1 border-solid border-black border-2'>Pagination</button>
</a>
<a class = "btn-container" href="<%= new_user_post_path(@user) %>">
    <button class='new-post-btn text-center p-1 border-solid border-black border-2'>Create a new post</button>
</a>

