<% @comments = Comment.where(post_id: post.id) %>
  <div class = "comments-box-container">
    <div class = "comments-box">
      <% @comments.limit(limit).each do |comment| %>
      <% user = User.find(comment.author_id) %>
        
        <% if can? :destroy, comment %>
          <%= render partial: 'posts/delete', locals: { model: comment, url: user_post_comment_path(user, post, comment) } %>   
        <% end %>

        <p class = "comment-box"><%= user.name %>: <%= comment.text %></p>
      <% end %>
    </div>
  </div>